{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/node"
  },
  "references": [
    { "path": "../token" },
    { "path": "../storage" },
    { "path": "../api" }
  ],
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs",
    "plugin": [],
    "excludeExternals": true,
    "sourceLinkTemplate": "https://github.com/zkcloudworker/minatokens-lib/blob/main/packages/abi/{path}#L{line}"
  },
  "include": ["src/**/*"],
  "exclude": ["dist/**", "node_modules"],
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "transpileOnly": true,
    "esm": true
  }
}
